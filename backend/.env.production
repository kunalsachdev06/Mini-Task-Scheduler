# Production Environment Configuration
# Copy this to .env and update with your production values

# Server Configuration
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/task_scheduler_prod
DB_HOST=localhost
DB_PORT=5432
DB_NAME=task_scheduler_prod
DB_USER=your_username
DB_PASSWORD=your_secure_password
DB_SSL=true

# Redis Configuration (for sessions and caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-at-least-32-characters-long
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-super-secure-refresh-token-secret-key
JWT_REFRESH_EXPIRES_IN=30d

# Session Configuration
SESSION_SECRET=your-super-secure-session-secret-key-at-least-32-characters
SESSION_MAX_AGE=86400000

# Email Configuration (SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=Task Scheduler

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Face Recognition Configuration
FACE_RECOGNITION_THRESHOLD=0.6
FACE_MODELS_PATH=/models

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
OTP_EXPIRY=300
OTP_LENGTH=6

# CORS Configuration
CORS_ORIGIN=https://yourdomain.com
CORS_CREDENTIALS=true

# WebAuthn Configuration
WEBAUTHN_RP_NAME=Task Scheduler
WEBAUTHN_RP_ID=yourdomain.com
WEBAUTHN_ORIGIN=https://yourdomain.com

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# SSL/TLS Configuration
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/key.pem

# Domain Configuration
DOMAIN=yourdomain.com
FRONTEND_URL=https://yourdomain.com
BACKEND_URL=https://api.yourdomain.com

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=uploads/

# Monitoring and Analytics
SENTRY_DSN=your_sentry_dsn_for_error_tracking
ANALYTICS_ID=your_analytics_id

# Feature Flags
ENABLE_PASSKEY=true
ENABLE_FACE_RECOGNITION=true
ENABLE_SMS_OTP=true
ENABLE_EMAIL_VERIFICATION=true

# Development Override (remove in production)
# BYPASS_EMAIL_VERIFICATION=false
# BYPASS_PHONE_VERIFICATION=false