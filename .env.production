# Production Environment Configuration
NODE_ENV=production
PORT=3000

# Database
DB_PATH=./database/tasks.db

# JWT Secret - CHANGE THIS IN PRODUCTION!
JWT_SECRET=CHANGE-THIS-TO-A-SECURE-RANDOM-STRING-MIN-32-CHARS

# VAPID Keys for Push Notifications - GENERATE NEW ONES FOR PRODUCTION!
VAPID_PUBLIC_KEY=YOUR-PRODUCTION-VAPID-PUBLIC-KEY
VAPID_PRIVATE_KEY=YOUR-PRODUCTION-VAPID-PRIVATE-KEY

# Email for VAPID - CHANGE THIS TO YOUR EMAIL
VAPID_EMAIL=your-production-email@yourdomain.com

# Security Settings
BCRYPT_ROUNDS=12
JWT_EXPIRES_IN=24h

# CORS Settings - ADD YOUR PRODUCTION DOMAIN
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=warn
LOG_FORMAT=combined